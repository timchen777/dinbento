<p id="notice"><%= notice %></p>


<%= render 'shared/title',title:"Orders List" %>
<table class="table table-hover table-striped" >
  <thead  >
    <tr>
      <th>票數</th>
      <th>讚</th>
      <th>噁</th>
      <th>姓名</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
       <td><%= order.total_votes %></td>
        <td>
          <%= link_to vote_order_path(order, vote: true), class: "btn btn-primary", method: 'post' do %>
          讚
          <% end %>
        </td>
        <td>
          <%= link_to vote_order_path(order, vote: false), class: "btn btn-danger", method: 'post' do %>
          噁
          <% end %>
        </td>      

        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', order, class: "btn btn-sucess"  %></td>
  <% if logged_in? %>
        <td><%= link_to 'Edit', edit_order_path(order),  class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', order, class: "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
<%= link_to 'New Order', new_order_path, class: "btn btn-success" %>
<% end %>